{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "strict": true,
    "esModuleInterop": true,
    "module": "es2015",
    "target": "es2015",
    "noImplicitAny": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "demo": ["demo/*"]
    }
  },
  "include": [
    "./demo"
  ],
  "exclude": [
    "./node_modules"
  ]
}
